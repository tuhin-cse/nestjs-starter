# Environment variables example file
# Copy this file to .env and fill in your values

# Database connection string
DATABASE_URL="mongodb+srv://username:password@cluster.example.mongodb.net/database?retryWrites=true&w=majority"

# JWT configuration
JWT_SECRET="your-secure-jwt-secret-key"
JWT_EXPIRATION="15m"
JWT_REFRESH_SECRET="your-secure-refresh-token-secret"
JWT_REFRESH_EXPIRATION="7d"

# Application configuration
PORT=3000
NODE_ENV=development

# CORS configuration (comma-separated domains)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:4200"